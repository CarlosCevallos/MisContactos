<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Datos de Usuario">
        <EditTextPreference
            android:key="username"
            android:title="Nombre de Usuario"
            android:summary="Usuario para la sincronizacion de datos"
            android:defaultValue=""/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Datos del Servidor">
        <EditTextPreference
            android:key="server_address"
            android:title="Servidor"
            android:summary="Nombre o Direccion del Servidor"
            android:defaultValue=""/>
    </PreferenceCategory>

</PreferenceScreen>